<!DOCTYPE html>
<html lang="en">
    <div class="background-class">
    <head>
        <title>Registration To Eduhub</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" 
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" 
        crossorigin="anonymous">
        <link rel="stylesheet" href="login.css" />
    </head>
    <body style="background:rgb(230, 227, 227);;">
        
        <div class="outer-box">
            <div class="container register mb-3">
                <div class="row">
                    <div class="col-md-3 register-left text-center">
                        <div class="hotairballoon">
                            <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" class="rounded" />
                        </div>
                        <div class="indent-class">
                            <h4 class="text-center"><b>Welcome @Eduhub</b></h4>
                            <hr>
                            <p class="text-center">Register yourself today and enjoy your ride to success with Eduhub! </p>
                            <a class="btn btn-secondary btn-outline-dark" href="/login">Login</a>
                        </div>
                    </div>
                    <div class="col md-9 register-right">
                        <ul class="nav nav-pills nav-justified ">
                            <li class="nav-item">
                                <a class="nav-link btn-secondary btn-outline-dark active" data-toggle="pill"><b>REGISTER</b></a>
                        
                            </li>
                        </ul>

                        
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <form action="/register" method="POST" id="reg-form">
                                    <div class="row register-form pt-5">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                First name:
                                                <input type="text" class="form-control" placeholder="Enter your first name" value="" 
                                                        name="firstname" id="firstname"/>
                                            </div>

                                            <div class="form-group">
                                                Email ID:
                                                <input type="email" class="form-control" placeholder="Enter your email" value="" 
                                                        name="email" id="email"/>
                                            </div>

                                            <div class="form-group">
                                                Password:
                                                <input type="password" class="form-control" placeholder="Enter your password" value="" 
                                                        name="password" id="password"/>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-6">
                                            <div class="form-group pb-2">
                                                Last Name:
                                                <input type="text" class="form-control" placeholder="Enter your last name" value="" 
                                                        name="lastname" id="lastname"/>
                                            </div>

                                            <div class="form-group">
                                                <div class="maxl my-3" id="gender">
                                                    Gender: <br>
                                                    <label class="radio inline">
                                                        <input type="radio" id="M" name="gender" value="male" checked>
                                                        <span>Male</span>
                                                    </label>
                                                    <label class="radio inline">
                                                        <input type="radio" id="F" name="gender" value="female">
                                                        <span>Female</span>
                                                    </label>
                                                </div>

                                                <div class="form-group">
                                                    Confirm Password:
                                                    <input type="password" class="form-control" placeholder="Enter your password again" value="" 
                                                        name="confirmpassword" id="confirmpassword"/>
                                                </div>
                                                <input type="submit" class="btn btn-secondary btn-outline-dark" style="float: right;" value="Register" />
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
    
                        <script>
                            const form = document.getElementById('reg-form')
                            form.addEventListener('submit', registerUser)

                            async function registerUser(event) {
                                event.preventDefault()
                                const firstname = document.getElementById('firstname').value
                                const lastname = document.getElementById('lastname').value
                                const email = document.getElementById('email').value
                                var gender = "";
                                if (document.getElementById("F").checked) {
                                    gender = document.getElementById("F").value
                                }
                                else {
                                    gender = document.getElementById("M").value
                                }
                                console.log(gender);
                                
                                const password = document.getElementById('password').value
                                const confirmpassword = document.getElementById('confirmpassword').value

                                const result = await fetch('/register', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json'
                                    },
                                    body: JSON.stringify({
                                        firstname,
                                        lastname,
                                        email,
                                        gender,
                                        password,
                                        confirmpassword
                                    })
                                }).then((res) => res.json())

                                if (result.status === 'ok') {
                                    // everything went fine
                                    alert('Success')
                                    window.location='http://'+window.location.hostname.toString()+':5001/login';
                                } else {
                                    alert(result.error)
                                }
                            }
		                </script>
                        </div>
                    </div>
                    </div>  
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" 
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" 
        crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" 
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" 
        crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" 
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" 
        crossorigin="anonymous"></script>
    </body>
    </div>
    </div>
    </div>
</html>